<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/primary_color"
                ></stroke>
            <corners
                android:radius="10dp"
                ></corners>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/other_color"
                ></stroke>
            <corners
                android:radius="10dp"
                ></corners>
        </shape>
    </item>
</selector>